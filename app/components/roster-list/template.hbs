{{user-status-bar user=skype.user}}

<div class="search-container">
    <div class="search">
        <input class="search-input"
               type="text"
               placeholder="Search For People"
               onkeyup={{action "searchHandler"}}>
        {{#if searchLoading}}
            <div class="loading">
                <span>Loading Results...</span>
            </div>
        {{else}}
            {{#each searchResults as |result|}}
                <div class="search-result {{if hideSearch "hide-search"}}" {{action "addContact" result}}>
                <span class="avatar">
                    {{profile-image person=result}}
                </span>
                    <span class="name">{{result.displayName}}</span>
                </div>
            {{/each}}
        {{/if}}
    </div>
</div>

<div class="groups">
    {{#each generalContacts as |person|}}
        <button class="group-member" onclick={{action "clickContact" person}}>
                    <span class="avatar">
                        {{profile-image person=person}}
                    </span>
            <span class="person-name">
                {{person.displayName}}
            </span>
        </button>
    {{else}}
        <div class="no-members">No members</div>
    {{/each}}

